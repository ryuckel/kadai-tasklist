      <th>id</th>
      <th>タイトル</th>
      <th>メッセージ</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= link_to task.id, task %></td>
      <td><%= task.status %></td>
      <td><%= task.content %></td>
